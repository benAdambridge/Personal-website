<!--JavaScript for Toggle/ Navigation Menu -->
        
    <script>
        var navLinks = document.getElementById("navLinks")
        
        function showMenu(){
            navLinks.style.right = "0"
        }
        function hideMenu(){
            navLinks.style.right = "-200px"
        }
        </script>    

<!-- Hide 'visualizing data' image if too big for the screen -->
        
<script>
    window.onload = function() {
        var visualImage = document.getElementById("visualizing-data");

        if (visualImage) {
            var screenWidth = window.innerWidth; // Get the screen width

            // Check if the screen width is less than or equal to 768
            if (screenWidth <= 768) {
                var tabletWidthThreshold = 768;
                var imageWidth = visualImage.offsetWidth;

                if (imageWidth > tabletWidthThreshold) {
                    // Calculate the scaling factor
                    var scaleFactor = tabletWidthThreshold / imageWidth;
                    
                    // Apply the scaling to the image width
                    visualImage.style.width = (scaleFactor * 100) + "%"; //

                    // Center the image horizontally
                    visualImage.style.marginLeft = "auto";
                    visualImage.style.marginRight = "auto";
                }
            }
        }
    }
</script>   
        
        <!--- Drop-down toggle for 'Data Projects' -->
        
<script>
    document.addEventListener("click", function(event) {
        var dropdownContent = document.getElementById("dropdownContent");
        var dropdownToggle = document.querySelector(".dropdown");

        if (event.target !== dropdownContent && event.target !== dropdownToggle && !dropdownContent.contains(event.target)) {
            dropdownContent.style.display = "none";
        }
    });

    function toggleDropdown() {
        var dropdownContent = document.getElementById("dropdownContent");
        if (dropdownContent.style.display === "block") {
            dropdownContent.style.display = "none";
        } else {
            dropdownContent.style.display = "block";
        }
    }
</script>
        
